<%= form_for(@project, url: admin_projects_path(@project)) do |f| %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true %><br />
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %><br />
  </div>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>

<% end %>